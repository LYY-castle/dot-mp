/* shopping_money/shopping-money-detail/shopping-money-detail.wxss */
.top{
  background: linear-gradient(90deg, #FEC87D, #FDC852);
  height:160px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  padding: 0 10px;
}
.moneyContent{
  width: 95%;
  display: flex;
  justify-content: space-around;
  padding:10px;
  border-radius: 10px 10px 0 0;
  text-align: center;
  background: #fff;
}
.buttonContent{
  box-sizing: border-box;
  width: 95%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-radius: 0 0 10px 10px;
  padding:20px 10px 10px 10px;
}
.btn{
  width:45%;
}
.listContent{
  box-sizing: border-box;
  width: 95%;
  height: 100%;
  margin: 10px auto;
  border-radius:10px;
  padding:10px 0;
  background: #fff;
}
.list{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding:10px;
  border-top:1px solid #eee;
}
