/* pages/product/search/search.wxss */
.container {
}
.goodContent {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 12px;
}
.goodContent .goodItem {
  display: block;
  width: 49%;
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 10px;
}
.goodContent .goodItem .imgContent {
  min-height: 150px;
  text-align: center;
  background: linear-gradient(to bottom, rgba(254, 254, 254, 0.6), rgba(243, 243, 243, 0.1));
  display: flex;
  align-items: center;
  font-size: 0;
}
.goodContent .goodItem .imgContent van-image {
  width: 100%;
}
.goodContent .goodItem .textContent {
  height: 100%;
  font-size: 10px;
  font-weight: 800;
  background: #fff;
  padding: 10px;
  color: #333333;
}
.searchContent {
  border-top: 1px solid #eee;
  background: #fff;
  padding: 10px 12px;
  font-size: 14px;
  color: #666666;
}
.searchContent .searchItem {
  display: flex;
  justify-content: space-between;
}
.searchContent .searchItemContent {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
