/* components/address-list/addressList.wxss */
@import '/static/less/common.wxss';
@import '/static/scss/_color.min.wxss';
@import '/static/scss/_font-size.min.wxss';
@import '/static/scss/_spacing.min.wxss';
@import '/static/scss/_useful_class.min.wxss';
.addressItem {
	display: flex;
	justify-content: space-between;
	border-bottom: 1px solid #eee;
	padding: 12px;
	color: rgba(0, 0, 0, 0.8);
	align-items: center;
}

.addressDetail {
	flex: 60%;
}
.roundName {
	width: 35px;
	height: 35px;
	border-radius: 50%;
	font-size: 16px;
	line-height: 35px;
	text-align: center;
	background: rgba(0, 0, 0, 0.2);
}
.popContent {
	box-sizing: border-box;
	padding: 100px 20px 50px 20px;
	height: 450px;
	position: relative;
}

.popContent .buttonGroup {
	width: 90%;
	margin: 20px auto;
}
.addressContent {
	height: 450px;
	padding-bottom: 70px;
	overflow: scroll;
}
