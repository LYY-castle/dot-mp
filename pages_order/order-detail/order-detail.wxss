/* pages/mine/order/order-detail/order-detail.wxss */
.container {
	background: linear-gradient(to bottom, #f9ae08 10%, #eee 30%);
	padding-bottom: 50px;
}

.buttonStyle {
	width: 80%;
	margin: 0 auto;
	display: flex;
	justify-content: center;
	align-items: center;
}

.logistics-user-container {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.container-title {
	width: 100%;
	display: flex;
	padding: 10px 0;
	border-bottom: 1px solid rgba(229, 229, 229, 1);
	justify-content: space-between;
	align-items: center;
}

.order-no {
	color: #969799;
}

.topContentText {
	text-align: center;
	color: #fff;
	font-size: 12;
}

.van-count-down {
	color: #fff !important;
}

.payButton .van-button__text {
	color: red;
}

.contentField {
	background-color: #fff;
}

.contentField .inputClass {
	margin: 10px 0;
	display: block;
	background-color: #eee;
}
.contentField .inputClass .van-cell {
	background: transparent;
}
.service {
	width: 50px;
	height: 50px;
	position: fixed;
	bottom: 50px;
	right: 0;
	z-index: 9;
}
.flex-start-center .van-radio-self {
	display: inline-block !important;
	margin-right: 5px;
}
.shareBtn {
	padding: 0;
	border: none !important;
	text-align: center;
	font-size: 14px;
	display: flex;
	flex-direction: column;
}
