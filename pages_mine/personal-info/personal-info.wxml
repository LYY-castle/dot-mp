<view class="container">
    <view class="avatarContent">
          <van-image
            src="{{userInfo.avatar}}"
            alt
            width="80px"
            height="80px"
            round
            fit="cover"
            wx:if="{{userInfo.avatar}}"
            bindtap="selectImage"
          />
        <van-image src="{{empty}}" alt round wx:else />
        <view class="c-gray fz-12 m-t-10">点击图片可重新上传头像</view>
    </view>
    <form catchsubmit="updateUserInfo" class="form">
        <van-field
          model:value="{{userInfo.nickname}}"
          label="姓名"
          name="nickname"
          placeholder="请输入姓名"
        />
        <van-field
          model:value="{{userInfo.mobile}}"
          name="mobile"
          type="tel"
          label="手机号"
          placeholder="请输入手机号"
        />
        <van-button round type="info" form-type="submit" block="{{true}}" color="#f9ae08" class="block m-t-20">提交</van-button>
    </form>
  </view>
