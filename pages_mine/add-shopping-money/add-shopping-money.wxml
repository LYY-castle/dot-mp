<page-meta>
  <navigation-bar
    title="{{nbTitle}}"
  />
</page-meta>
<view class="container">
    <form catchsubmit="addShoppingMoney" class="form" class="centerContent">
        <van-field
          type="number"
          maxlength="11"
          model:value="{{phone}}"
          label="手机号"
          name="phone"
          placeholder="请输入手机号"
        />
        <van-field
          maxlength="6"
          model:value="{{validateCode}}"
          center
          clearable
          label="验证码"
          placeholder="请输入短信验证码"
          border="{{ false }}"
          name="validateCode"
          use-button-slot
          >
            <van-button
                custom-style="color: #F9AE08;border:none"
                slot="button"
                size="small"
                bindtap="getCode"
                disabled="{{send}}"
              >{{sendMsg}}</van-button
            >
        </van-field>
        <van-button round type="info" form-type="submit" block="{{true}}" color="#f9ae08" class="block m-t-50">绑定</van-button>
    </form>
  </view>
