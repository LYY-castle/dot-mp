.container {
  overflow-y: scroll;
  background: #fff;
  -webkit-overflow-scrolling: touch;
}
.head {
  position: relative;
}
.avatarContent {
  text-align: center;
  margin-bottom: 10px;
  overflow: hidden;
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translate(-50%);
  z-index: 1;
}
.avatarContent .avatar {
  width: 80px;
  height: 80px;
  border-radius: 40px;
  border: 1px solid #eee;
  overflow: hidden;
}
.logoutButton {
  display: block;
  color: rgba(0, 0, 0, 0.5);
  width: 88px;
  margin: 20px auto;
}
.item image {
  display: block;
}
