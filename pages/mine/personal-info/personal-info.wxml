      <form catchsubmit="updateUserInfo" catchreset="onFailed" class="form">
        <van-field
          model:value="{{userInfo.name}}"
          label="姓名"
          name="name"
          placeholder="请输入姓名"
          input-align="right"
        />
        <van-field
          model:value="{{userInfo.phone}}"
          readonly
          name="phone"
          type="tel"
          label="手机号"
          placeholder="请输入手机号"
          input-align="right"
        />
        <van-field
          model:value="{{userInfo.idNo}}"
          clearable
          label="身份证"
          name="idNo"
          placeholder="请输入身份证"
          input-align="right"
        />
        <van-cell title="地址" value="{{cityString}}" bind:click="selectAddress" />
      </form>
    </view>
    <van-popup show="{{addressShow}}" position="bottom">
      <van-area
        title="请选择地址"
        area-list="{{areaList}}"
        columns-num="{{2}}"
        bind:confirm="confirm"
        bind:cancel="cancel"
      />
    </van-popup>
