<view class="container">
    <view class="avatarContent">
          <van-image
            src="{{avatar}}"
            alt
            width="80px"
            height="80px"
            round
            fit="cover"
            wx:if="{{avatar}}"
            bindtap="selectImage"
          />
        <van-image src="{{empty}}" alt round wx:else />
        <view class="c-gray fz-12 m-t-10">点击图片可重新上传头像</view>
    </view>
    <form catchsubmit="updateUserInfo" class="form">
        <van-field
          model:value="{{userInfo.name}}"
          label="姓名"
          name="name"
          placeholder="请输入姓名"
        />
        <van-field
          model:value="{{userInfo.phone}}"
          readonly
          name="phone"
          type="tel"
          label="手机号"
          placeholder="请输入手机号"
        />
        <van-field
          model:value="{{userInfo.idNo}}"
          clearable
          label="身份证"
          name="idNo"
          placeholder="请输入身份证"
        />
        <van-field
      label="地址"
      readonly="{{true}}"
      is-link="{{true}}"
      name="cityString"
      value="{{ cityString }}"
      placeholder="选择"
      bindtap="selectAddress"
    />
        <van-button round type="info" form-type="submit" block="{{true}}" color="#f9ae08">提交</van-button>
    </form>
    <van-popup show="{{addressShow}}" position="bottom">
      <van-area
        title="请选择地址"
        area-list="{{areaList}}"
        columns-num="{{2}}"
        bind:confirm="confirm"
        bind:cancel="cancel"
      />
    </van-popup>
  </view>
