.container {
  overflow: scroll;
}
.container .text-align-center {
  text-align: center;
  font-size: 12px;
  padding: 10px 0;
  background: #eee;
}
.container .sort {
  margin: 0 12px;
  padding: 10px 10px;
  background: #fff;
  border-radius: 7px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
  font-weight: 800;
  font-size: 12px;
}
.container .sort .sortItem .imgWidth {
  width: 40px;
  height: 40px;
}
.container .goodContent {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0 12px;
}
.container .goodContent .goodItem {
  display: block;
  width: 49%;
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 10px;
}
.container .goodContent .goodItem .imgContent {
  min-height: 150px;
  text-align: center;
  background: linear-gradient(to bottom, rgba(254, 254, 254, 0.6), rgba(243, 243, 243, 0.1));
  display: flex;
  align-items: center;
  font-size: 0;
}
.container .goodContent .goodItem .imgContent van-image {
  width: 100%;
}
.container .goodContent .goodItem .textContent {
  height: 100%;
  font-size: 10px;
  font-weight: 800;
  background: #fff;
  padding: 10px;
  color: #333333;
}
.container .scroll-view_H {
  white-space: nowrap;
}
