.container {
}

.container .text-align-center {
	text-align: center;
	font-size: 12px;
	padding: 0 0 10px 0;
	background: #eee;
}

.container .sort {
	height: 95px;
	margin: 0 12px;
	background: #fff;
	border-radius: 7px;
}
.sortContent {
	box-sizing: border-box;
	padding: 10px 0;
	width: 100%;
	overflow-x: scroll;
	display: flex;
	flex-wrap: no-wrap;
}
.sortItem {
	width: 20%;
	font-size: 12px;
	text-align: center;
}

.container .scroll-view_H {
	white-space: nowrap;
}

.backTop {
	background: #fff;
}

.searchContent {
	width: 100%;
}
.van-search {
	padding: 0 !important;
	width: 100% !important;
}
.titleContent {
	text-align: center;
	margin: 0 auto;
	position: relative;
}
.hotProductTitle {
	position: absolute;
	left: 50%;
	top: 45%;
	transform: translate(-50%, -50%);
}
.activity {
	border-radius: 10px;
	background: #ffffff;
	height: 134px;
	margin: 0 12px;
	overflow: hidden;
	transform: translateY(0);
}
